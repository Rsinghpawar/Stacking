<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition

        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="700">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tv_title"
            motion:layout_constraintVertical_bias="0.7"
            android:alpha="0.5" />
        <Constraint
            android:id="@+id/tv_desc"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_60dp"
            motion:layout_constraintTop_toBottomOf="@+id/tv_title"
            android:layout_marginStart="@dimen/dimen_60dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:alpha="0.5" />
        <Constraint
            android:id="@+id/btn_show_sheet_1"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="@dimen/dimen_35dp"
            android:layout_marginStart="@dimen/dimen_35dp"
            motion:layout_constraintTop_toTopOf="@+id/tv_desc"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0.5" />


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/tv_title"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="1"
            motion:layout_constraintVertical_bias="0.44" />
        <Constraint
            android:id="@+id/btn_show_sheet_1"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.73"
            android:layout_marginEnd="@dimen/dimen_35dp"
            android:layout_marginStart="@dimen/dimen_35dp"
            motion:layout_constraintTop_toTopOf="@+id/tv_desc"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="1" />
        <Constraint
            android:id="@+id/tv_desc"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_60dp"
            motion:layout_constraintTop_toBottomOf="@+id/tv_title"
            android:layout_marginStart="@dimen/dimen_60dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:alpha="1" />
        <Constraint
            android:id="@+id/img_bg"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="1.6"
            android:scaleY="1.6" />
    </ConstraintSet>
</MotionScene>