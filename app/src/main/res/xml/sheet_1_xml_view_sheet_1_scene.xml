<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="500">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/txt_selected_meal"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginTop="40dp"
            android:visibility="visible"
            android:alpha="0" />
        <Constraint
            android:id="@+id/tv_meal_result"
            motion:layout_constraintStart_toEndOf="@+id/txt_selected_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/txt_selected_meal"
            android:visibility="visible"
            android:layout_marginStart="8dp"
            motion:layout_constraintTop_toTopOf="@+id/txt_selected_meal"
            android:alpha="0" />
        <Constraint
            android:id="@+id/txt_selected_diet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/txt_selected_meal"
            motion:layout_constraintStart_toStartOf="@+id/txt_selected_meal"
            android:layout_marginTop="4dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/tv_diet_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/txt_selected_diet"
            motion:layout_constraintTop_toTopOf="@+id/txt_selected_diet"
            motion:layout_constraintStart_toStartOf="@+id/tv_meal_result"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>